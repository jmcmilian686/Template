
@model FileGenerator.Models.LFileViewModel

@using (Html.BeginForm("Create", "Document", FormMethod.Post, new { id = "form-Docedit" }))
{
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h4>
                    CREATE DOCUMENT
                </h4>


            </div>

            <div class="modal-body" id="msgBody">
                <div class="card">

                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div style="display:none;">
                                    <!--
                                        
                                    -->
                                    @Html.EditorFor(m => m.Document.LFile_ID, new { @id = "LFile_ID" });
                                   
                                </div>

                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="Doc_Namee">Document Name</label>
                                       
                                        @Html.TextBoxFor(m=>m.Document.Doc_Name, new { @class = "form-control", @placeholder = "Document Name", @id = "Doc_Name" })
                                        @Html.ValidationMessage("Doc_Name", "", new { @class = "text-danger" })

                                    </div>
                               
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label for="Doc_Namee">Document Description</label>
                                        @Html.TextBoxFor(m=> m.Document.Doc_Description,  new { @class = "form-control", @placeholder = "Document Description" , @id = "Doc_Desc" })
                                        @Html.ValidationMessage("Doc_Description", "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <hr />
                                <h4 id="strLett">Manage Structure</h4>
                                <div id="structPos">

                                    @if (ViewBag.action=="edit")
                                    {

                                        Html.RenderPartial("_StrPos", Model.DocStructs);
                                    }
                                    else {
                                        Html.RenderAction("CreatePos");
                                    }
                                    

                                </div>



                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success waves-effect">
                    <i class="material-icons">done</i>
                    <span>SAVE CHANGES</span>
                </button>
                <button type="button" class="btn bg-red waves-effect" data-dismiss="modal">
                    <i class="material-icons">clear</i>
                    <span>CLOSE</span>
                </button>

            </div>



        </div>
    </div>
}
