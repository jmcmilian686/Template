@model IEnumerable<FileGenerator.Domain.Entities.Field>
@{
    ViewBag.Title = "Index";
}
<div class="row" id="tabDetail">


        <!--Table Left-->


        <div class="col-md-6 col-xs-6 ">
            <div class="card">
                <div class="header">
                    <div class="col-xs-5 pull-left">
                        <h2>
                            Fields
                        </h2>
                    </div>
                    <div class="col-md-1 pull-right" id="btn_plus">
                        <button type="button"  class="btn_plus btn btn-success waves-effect pull-right" onclick="location.href='@Url.Action("Create", "Datafield")'">
                            <i class="material-icons">add</i>
                        </button>
                    </div>

                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                            <th>Action</th>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>



                            </thead>
                            <tbody>



                                @foreach (var p in Model)
                            {
                                <tr>
                                    <td style="text-align:center;">
                                        
                                        <button type="button" class=" btnView btn btn-table btn-primary waves-effect" onclick="location.href='@Url.Action("Index", "Datafield",new { id = p.ID})'">
                                            <i class="material-icons">visibility</i>
                                        </button>
                                    </td>
                                    <td class="idElem">@p.ID</td>
                                    <td>@p.Field_Name</td>
                                    <td>@p.Field_Desc</td>


                                </tr>
                        }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6 col-xs-6 ">
            <div class="card">
                <div class="header">
                    <div class="col-xs-5 pull-left">
                        <h2>
                            Data
                        </h2>
                    </div>


                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                            <th class="col-md-2">Action</th>
                            <th>Data</th>
                            

                            </thead>
                            <tbody>
                                @{

                                     Html.RenderAction("Details", new { id = (int)ViewBag.FirstId });

                                }


                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>





        <!--End of Table Left-->
        <!--Table Right-->
        <!--End of Table Right-->



 </div>




<!--Modal Area-->
<!-- Large Size -->
<div class="modal fade" id="largeModal" tabindex="-1" role="dialog">



    @{

        Html.RenderAction("Details",new { id = ViewBag.FirstId });

    }



</div>

<!--Normal Size-->

<div class="modal fade" id="defaultModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="defaultModalLabel">Message</h4>
            </div>
            <div class="modal-body" id="updArea">
                Do you want to delete the selected Item?
            </div>
            <div class="modal-footer">
                <button type="button" id="delFinalData" class="btn bg-red btn-link waves-effect" data-color="red">DELETE</button>
                <button type="button" id="clModalData" class="btn btn-link waves-effect" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>

<!--End Modal Area-->

