
@model FileGenerator.Domain.Entities.Field

@using (Html.BeginForm("Create", "Field", FormMethod.Post, new { id = "form-fieldedit" }))
{
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h4>
                    CREATE FIELD
                </h4>


            </div>

            <div class="modal-body" id="msgBody">
                <div class="card">

                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div style="display:none;">

                                     @Html.EditorFor(m => m.ID);

                                </div>

                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.LabelFor(m => m.Field_Name)
                                        @Html.EditorFor(m => m.Field_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Field Name" } })

                                    </div>
                                    @Html.ValidationMessageFor(m => m.Field_Name)
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.LabelFor(m => m.Field_Type)
                                        @Html.DropDownListFor(m => m.Field_Type, new SelectList(Model.Typ, "Value", "Text", Model.Field_Type), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Field_Type)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.LabelFor(m => m.Length)
                                        @Html.EditorFor(m => m.Length, new { htmlAttributes = new { @class = "form-control", @placeholder = "Field Length" } })
                                        @Html.ValidationMessageFor(m => m.Length)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.LabelFor(m => m.Default)
                                        @Html.EditorFor(m => m.Default, new { htmlAttributes = new { @class = "form-control", @placeholder = "Default Value" } })
                                        @Html.ValidationMessageFor(m => m.Default)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.LabelFor(m => m.Field_Desc)
                                        @Html.EditorFor(m => m.Field_Desc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Field Description" } })
                                        @Html.ValidationMessageFor(m => m.Field_Desc)
                                    </div>
                                </div>
                               
                               
                                







                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success waves-effect">
                    <i class="material-icons">done</i>
                    <span>SAVE CHANGES</span>
                </button>
                <button type="button" class="btn bg-red waves-effect" data-dismiss="modal">
                    <i class="material-icons">clear</i>
                    <span>CLOSE</span>
                </button>

            </div>

           

        </div>
    </div> 
}