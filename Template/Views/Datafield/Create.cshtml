@model IEnumerable<FileGenerator.Domain.Entities.DataField>
@using FileGenerator.Domain.Entities
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">

    <div class="col-md-5" id="c_header">

        <div class="card">
            <div class="body">

                <div class="row">
                    

                    <div class="col-md-6">

                        <div class="form-group">
                            <div class="form-line">

                                @Html.DropDownList("Field", new SelectList((IEnumerable<Field>)ViewBag.FieldName, "ID", "Field_Name"), "Select a Field", new { @class = "form-control", @id = "fldId" })

                            </div>
                        </div>

                    </div>

                    <div  class="col-md-6">
                        <button type="button" class="btn btn-success waves-effect" id="addition">
                            <i class="material-icons">add</i>
                            <span>ADD</span>
                        </button>

                        <button type="button" class="btn bg-purple waves-effect" id="linking">
                            <i class="material-icons">link</i>
                            <span>LINK</span>
                        </button>

                    </div>

                    

                </div>

            </div>


        </div>

    </div>

</div>
<div class="row">
    <div class="col-md-11" id="c_body">
        <div class="card">

            <div class="body">

                <div class="row">
                    <div class="row ">
                        <div class="col-md-2 pull-right">

                            <button type="button" class="btn bg-orange waves-effect btn_save pull-right" id="dataSave">
                                <i class="material-icons">save</i>
                            </button>
                            <button type="button" class="btn bg-cyan waves-effect btn_save2 pull-right ">
                                <i class="material-icons">file_upload</i>
                            </button>

                        </div>
                    </div>
                   <hr />
                    <div class="row"  id="renderTable">
                        @{

                             Html.RenderAction("Table");

                        }

                    </div>
                   

                </div>

            </div>

        </div>

    </div>

</div>

<!-- Modal-->
<div  class="modal fade" id="modalOk" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modalCont">
            <div class="modal-header">


                <h4> Create Data </h4>



            </div>
            <div class="modal-body">
                <h3>The data has been added successfully!</h3>

            </div>
            <div class="modal-footer">

                <button type="button" id="closeO" class="btn bg-red waves-effect" data-dismiss="modal">
                    <i class="material-icons">clear</i>
                    <span>CLOSE</span>
                </button>

            </div>
            <script>


            </script>
        </div>
    </div>

</div>


